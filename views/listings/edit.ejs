<%- layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your Listing</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control"
                        required />
                    <div class="valid-feedback">Title looks good</div>
                    <div class="invalid-feedback">PLease give a Title</div>

                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" required
                        class="form-control"><%= listing.description %></textarea>
                    <div class="valid-feedback">Description looks good</div>
                    <div class="invalid-feedback">PLease give a description</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image Url</label>
                    <input name="listing[image]" required class="form-control" value="<%= listing.image %>"
                        type="text" />
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" required class="form-control" value="<%= listing.price %>"
                            type="number" />
                        <div class="valid-feedback">Price looks good</div>
                        <div class="invalid-feedback">PLease give a proper price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" required class="form-control" value="<%= listing.country %>"
                            type="text" />
                        <div class="valid-feedback">Country looks good</div>
                        <div class="invalid-feedback">PLease give a Country</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" required class="form-control" value="<%= listing.location %>"
                        type="text" />
                    <div class="valid-feedback">Location looks good</div>
                    <div class="invalid-feedback">PLease give a location</div>
                </div>
                <button class="btn btn-dark mt-3 mb-3 edit-btn">Edit</button>
            </form>
        </div>
    </div>